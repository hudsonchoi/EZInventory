@model EZInventory.Model.Item

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><a href="/Item">Items</a> :: Details</h2>

  
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.sku)

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">Company</label>

            <div class="col-md-10">
                @Html.DisplayFor(model => model.Company.name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">SKU</label>

            <div class="col-md-10">
                @Html.DisplayFor(model => model.sku)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">BARCODE</label>

            <div class="col-md-10">
                @Html.DisplayFor(model => model.barcode)
            </div>
        </div>
    
        <div class="form-group">
            <label class="control-label col-md-2" for="sku">NAME</label>

            <div class="col-md-10">
                @Html.DisplayFor(model => model.name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">DESCRIPTION</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.description, new { @class = "EZTextBox"})
            </div>
        </div>
    </div>

<div>
    @Html.ActionLink("Back to List", "Index") |  @Html.ActionLink("Edit", "Edit", new { sku=Model.sku }) 
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
