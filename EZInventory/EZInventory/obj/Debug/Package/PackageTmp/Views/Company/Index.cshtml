@model IEnumerable<EZInventory.Models.CompanyViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Companies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="CSSTableGenerator" style="clear:both">
<table>
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.CompanyName)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Billing)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.Shipping)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.BillToCompany)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.City)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.State)
        </td>
        <td></td>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Billing)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Shipping)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BillToCompany)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
</div>