@model EZInventory.Model.Company

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(function () {
        $("#billto").attr("disabled", "disabled");
        $("#shipto").attr("disabled", "disabled");
    });
</script>

<h2><a href="/Company">Companies</a> :: Details</h2>

    <div class="form-horizontal" style="clear:both">
        <legend>Company</legend>

<div class="EZCol" style="clear:left;width:1000px">
        @Html.HiddenFor(model => model.id)
        <div class="EZCol">
            <div class="form-group">
                @Html.Label("Name ", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.name)
                </div>
            </div>
        </div>

        <div class="EZCol">
            <div class="form-group" style="width:800px">
                @Html.Label("Address ", new { @class = "control-label col-md-4" })
                <div class="col-md-8" style="width:500px">
                    @Html.DisplayFor(model => model.address, new { style = "width: 290px" })
                </div>
            </div>
        </div>
</div>

<div class="EZCol" style="clear:left;width:1000px">
        <div class="EZCol">
             <div class="form-group">
                @Html.Label(" City", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.city)
                </div>
            </div>
        </div>
        <div class="EZCol">
           <div class="form-group">
                @Html.Label("State ", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.state)
                </div>
            </div>
        </div>
        <div class="EZCol">
           <div class="form-group">
                   @Html.Label("Zip ", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.zip)
                </div>
            </div>
        </div>
</div>

<div class="EZCol" style="clear:left;width:1000px">
        <div class="EZCol">
             <div class="form-group">
                @Html.Label("Email ", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.email)
                </div>
            </div>
         </div>
         <div class="EZCol">
           <div class="form-group">
                @Html.Label("Password ", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.password)
                    @Html.ValidationMessageFor(model => model.password)
                </div>
            </div>
        </div>
</div>

<div class="EZCol" style="clear:left;width:1000px">
        <div class="EZCol">
             <div class="form-group">
                   @Html.Label("Billing", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.CheckBox("billto", Model.billto.HasValue ? Model.billto : false)
                    @Html.ValidationMessageFor(model => model.billto)
                </div>
            </div>
       </div>
        <div class="EZCol">
           <div class="form-group">
                @Html.Label("Shipping", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.CheckBox("shipto", Model.shipto.HasValue ? Model.shipto : false)
                    @Html.ValidationMessageFor(model => model.shipto)
                </div>
            </div>
        </div>
        <div class="EZCol">
            <div class="form-group">
                @Html.Label("Bill To", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                     @ViewBag.billToCompany
                </div>
            </div>
        </div>
</div>
</div>
<div style="clear:both">
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
</div>
