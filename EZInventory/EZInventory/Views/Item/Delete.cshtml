@model EZInventory.Model.Item

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><a href="/Item">Items</a> :: Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.sku)

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">Company</label>

            <div class="col-md-10">
                @Html.DisplayFor(model => model.Company.name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">SKU</label>

            <div class="col-md-10">
                @Html.DisplayFor(model => model.sku)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">BARCODE</label>

            <div class="col-md-10">
                @Html.DisplayFor(model => model.barcode)
            </div>
        </div>
    
        <div class="form-group">
            <label class="control-label col-md-2" for="sku">NAME</label>

            <div class="col-md-10">
                @Html.DisplayFor(model => model.name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">DESCRIPTION</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.description, new { @class = "EZTextBox"})
            </div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>