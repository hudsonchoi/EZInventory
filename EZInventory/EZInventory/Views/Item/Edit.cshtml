@model EZInventory.Model.Item

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><a href="/Item">Items</a> :: Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.sku)

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">Copmany</label>
            <div class="col-md-10">
                @Html.DropDownList("companyid", String.Empty) <span class="req">*</span>
                @Html.ValidationMessageFor(model => model.companyid)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">SKU</label>

            <div class="col-md-10">
                @Html.DisplayFor(model => model.sku)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">BARCODE</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.barcode) <span class="req">*</span>
                @Html.ValidationMessageFor(model => model.barcode)
            </div>
        </div>
    
        <div class="form-group">
            <label class="control-label col-md-2" for="sku">NAME</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.name) <span class="req">*</span>
                @Html.ValidationMessageFor(model => model.name)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="sku">DESCRIPTION</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.description, new { @class = "EZTextBox"})
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

