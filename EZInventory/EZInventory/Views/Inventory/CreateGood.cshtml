@model EZInventory.Model.Inventory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Inventory</h4>
        <hr />
    @Html.ValidationSummary(true)
       @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.sku, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("sku", String.Empty)
                @Html.ValidationMessageFor(model => model.sku)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.lot, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.lot)
                @Html.ValidationMessageFor(model => model.lot)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.batch, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.batch)
                @Html.ValidationMessageFor(model => model.batch)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.expdate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.expdate)
                @Html.ValidationMessageFor(model => model.expdate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.qty, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.qty)
                @Html.ValidationMessageFor(model => model.qty)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.inputdate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.inputdate)
                @Html.ValidationMessageFor(model => model.inputdate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.companyid, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.companyid)
                @Html.ValidationMessageFor(model => model.companyid)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.locationid, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("locationid", String.Empty)
                @Html.ValidationMessageFor(model => model.locationid)
            </div>
        </div>

        <div class="form-group">
        <label class="control-label col-md-2" for="capacity">Capactiy needed:</label>
            <div class="col-md-10">
                @Html.DropDownList("capacity", String.Empty)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
